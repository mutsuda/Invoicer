<%= simple_form_for(@blip) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :invoice_id %>
    <%= f.input :date %>
    <%= f.input :description %>
	<%= f.input :ppu, :collection => Job.all.collect { |j| [j.name, j.price]} %>
    <%= f.input :qtt %>
	
   
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
